{
  "name": "morpheus-cli",
  "version": "0.3.4",
  "description": "Morpheus is a local AI agent for developers, running as a CLI daemon that connects to LLMs, local tools, and MCPs, enabling interaction via Terminal, Telegram, and Discord. Inspired by the character Morpheus from *The Matrix*, the project acts as an intelligent orchestrator, bridging the gap between the developer and complex systems.",
  "bin": {
    "morpheus": "./bin/morpheus.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc && npm run build:ui",
    "build:ui": "npm install --prefix src/ui && npm run build --prefix src/ui",
    "prepublishOnly": "npm run build",
    "start": "node bin/morpheus.js",
    "dev:ui": "npm run dev --prefix src/ui",
    "dev:cli": "npx tsx watch src/cli/index.ts -- start",
    "test": "vitest",
    "backfill": "tsx src/runtime/memory/backfill-embeddings.ts"
  },
  "keywords": [],
  "author": "Marcos Nunes",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.39.0",
    "@inquirer/prompts": "^8.2.0",
    "@langchain/anthropic": "^1.3.12",
    "@langchain/core": "^1.1.18",
    "@langchain/google-genai": "^2.1.13",
    "@langchain/mcp-adapters": "^1.1.2",
    "@langchain/ollama": "^1.2.1",
    "@langchain/openai": "^1.2.3",
    "@openrouter/sdk": "^0.8.0",
    "@types/better-sqlite3": "^7.6.13",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.6.2",
    "body-parser": "^2.2.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "figlet": "^1.10.0",
    "fs-extra": "^11.3.3",
    "js-yaml": "^4.1.1",
    "langchain": "^1.2.16",
    "open": "^11.0.0",
    "ora": "^9.1.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "telegraf": "^4.16.3",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.1.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcosnunesmbs/morpheus.git"
  },
  "bugs": {
    "url": "https://github.com/marcosnunesmbs/morpheus/issues"
  },
  "homepage": "https://morpheusproject.xyz",
  "optionalDependencies": {
    "sqlite-vec-linux-x64": "^0.1.7-alpha.2"
  }
}
